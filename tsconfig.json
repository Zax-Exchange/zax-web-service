{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "es6",
    "target": "es6",
    "strict": true,
    "rootDir": "app",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "app/test/typings"
    ],
    "paths": {
      "sequelize-test-helpers": ["./app/test/typings/sequelize-test-helpers.d.ts"]
    }
  },
  "exclude": [
    "app/api/models",
    "app/types/**"
  ]
}
