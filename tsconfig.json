{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "es6",
    "target": "es6",
    "strict": true,
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./test/typings"
    ],
    "paths": {
      "sequelize-test-helpers": ["./test/typings/sequelize-test-helpers.d.ts"],
      // "proxyquire": ["./app/test/typings/proxyquire.d.ts"]
    }
  },
  "exclude": [
    "./app/types/**/*.d.ts",
    "./app/types/**/*.ts",
    "./test",
    "./node_modules"
  ]
}
